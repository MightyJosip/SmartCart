<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrikazArtikla">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="99dp">

        <TextView
            android:id="@+id/txt_naziv"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/txt_opis"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/txt_broj_glasova"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <Button
            android:id="@+id/btn_upvote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upvote" />

        <Button
            android:id="@+id/btn_downvote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Downvote" />

        <Button
            android:id="@+id/btn_dodaj_na_popis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dodaj na popis" />

        <ImageView
            android:id="@+id/slika"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>